<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuiGuShiWebActivity" >

    <RelativeLayout
        android:id="@+id/rl_guigushi_web_top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/checked"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_guigushi_web_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#ffffff" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_guigushi_web_top" >

        <TextView
            android:id="@+id/tv_guigushi_web_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text=""
            android:textColor="#666666"
            android:textColorHighlight="#ffffff"
            android:textStyle="bold" />
    </ScrollView>

</RelativeLayout>