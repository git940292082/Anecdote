<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <RelativeLayout
        android:id="@+id/rl_login_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/checked" >

        <ImageButton
            android:id="@+id/iv_login_top_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@drawable/ic_denglu" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_login_username"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/rl_login_top"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/login_input_wrap"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/ivemail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_yhm" />

        <EditText
            android:id="@+id/et_login_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@null"
            android:inputType="textEmailAddress" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/ll_login_username"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_input_wrap"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/ivpwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mima" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@null"
            android:inputType="textPassword" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/ib_login"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_hong"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rl_login_TPOS"
        android:layout_width="match_parent"
        android:layout_height="145sp"
        android:layout_below="@+id/ib_login"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="3sp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145sp"
            android:background="@drawable/biankuang"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/qq_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@drawable/night_sns_qqfriends_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biankuang"
                    android:gravity="center"
                    android:text="QQ账号登陆"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/xinlang_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@drawable/night_sns_sina_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biankuang"
                    android:gravity="center"
                    android:text="新浪账号登陆"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weixin_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="45sp"
                    android:layout_height="45sp"
                    android:background="@drawable/night_sns_weixin_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biankuang"
                    android:gravity="center"
                    android:text="微信账号登陆"
                    android:textSize="8sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_below="@+id/rl_login_TPOS"
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/biankuang" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="没有账号?" />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="立即注册"
                android:textColor="#ff0000" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>