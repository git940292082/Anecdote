<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity" >

    <RelativeLayout
        android:id="@+id/rl_register_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/checked" >

        <ImageButton
            android:id="@+id/iv_register_top_return"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_zhuc"
            android:padding="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_register_username"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/rl_register_top"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_input_wrap"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/ivemail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_yhm" />

        <EditText
            android:id="@+id/et_register_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@null"
            android:hint="请输入用户名"
            android:inputType="textEmailAddress" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_register_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/ll_register_username"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_input_wrap"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/ivpwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mima" />

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_register_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/ll_register_password"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_input_wrap"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/ivname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_nicheng" />

        <EditText
            android:id="@+id/et_register_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@null"
            android:hint="昵称"
            android:inputType="text" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_register_code"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/ll_register_name"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_input_wrap"
        android:orientation="horizontal"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/ivcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="6dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_yanzm" />

        <EditText
            android:id="@+id/et_register_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@null"
            android:hint="验证码"
            android:inputType="text" >
        </EditText>

        <ImageView
            android:id="@+id/iv_register_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:src="@drawable/ic_bg" />
    </LinearLayout>

    <Button
        android:id="@+id/ib_register"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_register_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_hong"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>