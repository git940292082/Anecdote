<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ark.pocket.read.activity.TupianActivity" >

    <RelativeLayout
        android:id="@+id/rl_tp_top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/checked"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="搞笑图片"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_tp_top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="我要找个能爱我爱到最"
        android:textColor="@color/checked"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tp_title"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:src="@drawable/ic_bg1" />

</RelativeLayout>