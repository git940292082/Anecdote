<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_discover_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/checked"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_discover_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发现"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_discover_top"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_riddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/iv_riddle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_miyu" />

            <Button
                android:id="@+id/bt_riddle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bt"
                android:text="益智猜谜"
                android:textColor="#3f2518"
                android:textColorHighlight="@color/checked"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_robot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/iv_robot"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_robot" />

            <Button
                android:id="@+id/bt_robot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bt"
                android:text="小 i 互动"
                android:textColor="#18a7f2"
                android:textColorHighlight="@color/checked"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/iv_game"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_game" />

            <Button
                android:id="@+id/bt_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_bt"
                android:text="益智游戏"
                android:textColor="#0e932e"
                android:textColorHighlight="@color/checked"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>