<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_guigushi_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/checked"
        android:gravity="center_vertical" >

        <RadioGroup
            android:id="@+id/rg_guigushi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_guigushi_xiaoyuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="校\n园"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_guigushi_minjian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="民\n间"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_guigushi_yiyuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="医\n院"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_guigushi_jiali"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="家\n里"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_guigushi_lingyi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="灵\n异"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_guigushi_changpian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="长\n篇"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_guigushi_duanpian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="短\n篇"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_guigushi_yuanchuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="原\n创"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_guigushi_neihan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="内\n涵"
                android:textColor="@color/selector_rg_text_color"
                android:textSize="14sp" />
        </RadioGroup>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guigushi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_guigushi_top" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>